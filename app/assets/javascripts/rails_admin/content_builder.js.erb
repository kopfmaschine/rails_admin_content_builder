});

// when click on delete button
$(document).on('click', '.cb-tools__btn--delete', function() {
  var resp = confirm('<%= I18n.t('admin.actions.content_builder.delete_block')%>');

  if(resp) {
    $($(this).attr('href')).remove();
  }
});

// when click on tools buttons
